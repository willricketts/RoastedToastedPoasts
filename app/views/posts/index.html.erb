<h1>Will Ricketts</h1>
<% @posts.each do |post| %>
    <h2><%= link_to post.title, post  %></h2>
    
    <p><%= post.content %></p>
        <p><% if user_signed_in? %><%= link_to "Edit", edit_post_path(post) %> | <%= link_to "Delete", post, :confirm => "Yeah?", :method => :delete %><% end %></p>
    <hr />
<% end %>

<p><% if user_signed_in? %><%= link_to "Add a new post", new_post_path %><% end %></p>